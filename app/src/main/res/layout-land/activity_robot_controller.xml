<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:custom="http://schemas.android.com/apk/res-auto"

             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/controllerBg"

             tools:context="io.github.plenglin.kiwicontrol.RobotControllerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <io.github.plenglin.kiwicontrol.JoystickView
                android:id="@+id/translationJoystick"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:clickable="true"

                custom:bgColor="@color/transJoystickBg"
                custom:touchColor="@color/transJoystickTouch"
                custom:touchRadius="25dp"
                custom:joystickLimit="5dp"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_above="@id/translationJoystick"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translationJoystickTitle"
                android:textColor="@color/joystickLabel"
                android:textSize="12pt"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
